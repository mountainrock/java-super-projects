#parse("magazine/publisherMenu.vm")

<style>
.thumbnail:hover span{ /*CSS for enlarged image on hover*/
visibility: visible;
top: 0;
left: 60px; /*position where enlarged image should offset horizontally */

}

</style>

<div style="width:100%;height:550px" >
<br/>

<table width="100%" style="margin-left:15%">
<!-- upload issue table -->
  <tr>
    <td>
		
		<table align="left" style="margin:14px">
		   	<tr>
		   		<td>Upload magazine issue images (select multiple)</td> 
		      <td>
		      <form id="uploadForm" method="post" action="${uploadIssueUrl}" enctype="multipart/form-data">
					<input type="hidden" name="magazineId" value="${magazineId}" size="20"/>
					<input type="hidden" name="issueId" value="${issueId}" size="20"/>
					      
		    	   <input type="file" name="fileToUpload" id="fileToUpload" multiple="multiple" size="5"/>
		    	   <input type="button" onclick="uploadFile();" value="Upload" />
		    	   <a href="/"> Cancel</a>
		     </form>
			     	
			    </td>
		   </tr>
		</table>
   </td>
  </tr>
<!-- end upload issue table -->
 
<tr> <td>&nbsp;</td></tr>

<!-- display uploaded images -->

<tr> <td>
			<div  style="overflow:scroll;overflow-y:hidden; height:225px;width:700px;border:1px solid lightgrey;padding:5px">
			<table>
			   
			   <tr>
			#foreach($issuePage in $issuePages)
				#if($velocityCount==0)
					<td>
				        <table>
				           <tr><td>&nbsp;</td></tr>
				           <tr>
				           		<td height="200">&nbsp;</td>
						   		<td>Page No.</td>
						   </tr>
						 </table>
				     </td>
			     #end
			     <td  style="padding-left:15px">
			       <table>
			         <tr>
			   	       <td width="200" align="center" colspan="2">
			   	           <a class="preview" href="#" onclick="showImagePreviewDiv('/magazine/getBlob?blobKey=${issuePage.blobKey}')">
			   	           <img src="/magazine/getBlob?blobKey=${issuePage.blobKeyThumbnail}" width="100" height="150"/>
			   	           </a>
			   	       </td> 
			   	     </tr>
			   	     <tr>  
			           <td width="30" align="center"> <input type="text" name="pageNumber" value="${issuePage.pageNumber}" size="20" style="width:20px"/> </td>
			           <td> 
			              <a href="#" onclick="deleteIssuePage(${issuePage.issuePageId})">
			                <img src="/static/images/deleteRed.png" height="12px" width="12px"/>
			              </a> 
			           </td>
			        </tr>
			       </table>
			     </td>
			#end
				</tr>
			</table>
<!-- end display uploaded images -->			

   </td>
  </tr>
  
  <tr><td>
      <table>
      		   <tr>
			   		<td>
			   		  Front page number :<input type="text" name="frontPage" value="1" style="width:20px"/><br/>
			   		  Preview page numbers :<input type="text" name="previewPageNumbers" value="1,3,5,7" style="width:80px"/><br/><br/>
			   		  <input type="button" name="save" value="Save"/> 
			   		  <input type="button" name="preview" value="Preview" onclick="javascript:openPreview(${issueId})"/>
			   		</td>
			   </tr>
      </table>
   </td></tr>
   
</table>


