Checkout items
<fieldset>
<table width="100%" >

#foreach($item in ${items})
  <tr style="margin:15px; #if( $velocityCount % 2 == 1 )background:lightgrey#end">
      <td>$velocityCount</td>
      <td width="50%">$item.issueName</td>
      <td>$item.subscriptionType</td>
       <td>${item.price}</td>
     </tr>
 #end
 <tr>
	<td colspan="4">
		<hr/>
	</td>
 </tr>
  <tr>
	<td colspan="4">
		<button type="button" title="Proceed to Checkout" class="button btn-proceed-checkout btn-checkout"><span>
		<span>Checkout with Paypal</span></span>
		</button>
	</td>
 </tr>
 
 </table>
 
 
</fieldset>


